@model IQueryable<CatLib.Models.NameGenerator.CatGeneratorName>

@{
    ViewData["Title"] = "Cat Name Generator";
}

<div class="calc-wrapper">
    <div class="calc-header">
        <h3 class="cat-detail-header-name-value">Cat Name Generator</h3>
